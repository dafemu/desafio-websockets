<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-6 p-4 text-center">
            <form action="http://localhost:8080/productos" method="POST">
                <div class="mb-3">
                    <label for="productoNombre" class="form-label">Nombre Producto:</label>
                    <input type="text" class="form-control" name="productoNombre" placeholder="ej: Ipad">
                </div>
                <div class="mb-3">
                    <label for="productoPrecio" class="form-label">Precio:</label>
                    <input type="number" class="form-control" name="productoPrecio" placeholder="ej: 800">
                </div>
                <div class="mb-3">
                    <label for="productoImagen" class="form-label">Imagen:</label>
                    <input type="text" class="form-control" name="productoImagen" placeholder="ej: URL">
                </div>
                <button type="submit" class="btn btn-primary w-100">Enviar</button>
            </form>
        </div>
         <div class="col-12 col-md-6 p-4">
            {{> viewProducts }}
        </div>
    </div>
</div>